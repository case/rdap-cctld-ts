{
  "$schema": "https://raw.githubusercontent.com/denoland/deno/98f62cee78e85bfc47c62ed703777c6bc8794f1c/cli/schemas/config-file.v1.json",
  "imports": {
    "@b-fuze/deno-dom": "jsr:@b-fuze/deno-dom@^0.1.56",
    "@cliffy/table": "jsr:@cliffy/table@^1.0.0-rc.8",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/cli": "jsr:@std/cli@^1.0.23",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/http": "jsr:@std/http@^1.0.21",
    "ts-punycode": "npm:ts-punycode@^0.1.0"
  },
  "lock": {
    "frozen": true
  },
  "tasks": {
    "cli": "deno run --no-check --allow-import --allow-env --allow-net --allow-read=./data,./src,./.env --allow-write=./data src/cli.ts",
    "download-bootstrap": "deno run --allow-net=data.iana.org,www.iana.org --allow-read=./data --allow-write=./data src/main.ts",
    "build": "deno run --no-check --allow-import --allow-env --allow-net --allow-read=./data,./src,./.env --allow-write=./data src/cli.ts --build",
    "server": "deno run --no-check --allow-import --allow-env --allow-net --allow-read src/httpServer.ts",
    "deploy": "deno run --allow-read --allow-net --allow-env util/deploy.ts",
    "test": "deno test --allow-read --allow-import",
    "test:coverage": "deno test --allow-read --allow-import --coverage=cov_profile",
    "check": "deno check --allow-import src/**/*.ts tests/**/*.ts",
    "lint": "deno lint src/ tests/",
    "fmt:check": "deno fmt --check src/ tests/"
  },
  "compilerOptions": {
    "noImplicitAny": false,
    "strict": true,
    "types": ["https://www.val.town/types/valtown.d.ts"],
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns",
      "deno.unstable"
    ]
  },
  "lint": {
    "include": ["deno:/https/esm.town/**/*"],
    "exclude": ["src/web/static/**/*.js"],
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "node_modules_dir": false,
  "experimental": {
    "unstable-node-globals": true,
    "unstable-temporal": true,
    "unstable-worker-options": true,
    "unstable-sloppy-imports": true
  }
}
